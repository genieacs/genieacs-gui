<%= simple_form_for(@division) do |f| %>
  <%= render 'shared/error_message', model: @division %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :name %>
    <%= f.association :department, prompt: 'Select department' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
