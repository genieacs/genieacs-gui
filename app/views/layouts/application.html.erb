<!DOCTYPE html>
<html>
<head>
  <title>GenieACS</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="header">
  <div id="user_menu" style="float: right; margin: 5px;">
    <% if logged_in? %>
      <%= current_user %> | <%= link_to 'Log out', log_out_path %>
    <% else %>
      <%= link_to 'Log in', log_in_path %>
    <% end %>
  </div>
  <div class="app-name">GenieACS</div>
  <%= render 'layouts/menu' %>
</div>

<div id="content">
<%- flash.each do |k, v| %>
  <div class="flash <%= k %>"><%= v %></div>
<% end %>

<%= yield %>
</div>
<div id="footer">&copy;2013 genieacs.com</div>
</body>
</html>
