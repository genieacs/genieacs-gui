<form method="POST" action="/provisions">
<%= token_tag form_authenticity_token %>
<div class="field">
  <label for="name">Name</label><br />
  <input id="name" name="name" type="text" <%= 'readonly' if @provision.include? '_id' %> value="<%= @provision['_id'] %>" />
</div>

<br/>
<div class="field">
  <label for="weight">Script</label><br />
  <textarea id="script" name="script" cols="80" rows="24"><%= h @provision['script'] %></textarea>
</div>

<br/>
<div class="actions">
  <input type="submit" value="Save" />
</div>
